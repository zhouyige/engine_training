<!-- High Dynamic Range (HDR) Forward Shading Pipeline -->
<Pipeline>
	<Setup>
		<RenderTarget id="RT0" />
		<RenderTarget id="RT1">
		<RenderTarget id="RT2"/>
	</Setup>
	<CommandQueue>
		<Stage id="drawscene">
			这里做场景基本绘制
		</Stage>
		<Stage id="BrightPass">
			<SwitchTarget target="BLURBUF1" />
			<BindBuffer sampler="texture0" sourceRT="RT0"/>
			<DrawQuad material="glow.material.xml" pass="brightlight"/>
			<UnbindBuffers />
		</Stage>
		<Stage id="Bloom">
			<SwitchTarget target="RT2" />
			<BindBuffer sampler="texture0" sourceRT="RT1"/>
			<DrawQuad material="glow.material.xml" context="blur"/>
			<UnbindBuffers />
		</Stage>
		<Stage id="final">
			<SwitchTarget target="" />
			<BindBuffer sampler="texture0" sourceRT="RT" />
			<BindBuffer sampler="texture1" sourceRT="RT1" />
			<DrawQuad material="glow.material.xml" pass="hdrfinal"/>
			<UnbindBuffers />
		</Stage>
	</CommandQueue>	
</Pipeline>

